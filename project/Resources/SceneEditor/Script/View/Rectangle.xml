<!-- params: X, Y, Width, Height, FillColor, BorderColor -->
<Node>
	<Script>if fillColor then</Script>
	<DrawNode X="x" Y="y" Width="width" Height="height">
		<Polygon FillColor="color">
			<Vec2 X="-width*0.5" Y="-height*0.5"/>
			<Vec2 X="width*0.5" Y="-height*0.5"/>
			<Vec2 X="width*0.5" Y="height*0.5"/>
			<Vec2 X="-width*0.5" Y="height*0.5"/>
		</Polygon>
	</DrawNode>
	<Script>end</Script>
	<Script>if borderColor then</Script>
	<Line Color="borderColor">
		<Vec2 X="0" Y="0"/>
		<Vec2 X="width" Y="0"/>
		<Vec2 X="width" Y="height"/>
		<Vec2 X="0" Y="height"/>
		<Vec2 X="0" Y="0"/>
	</Line>
	<Script>end</Script>
</Node>
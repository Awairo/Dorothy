<!-- params: X, Y, Width, Height, FillColor, BorderColor, InheritColor -->
<Node X="x" Y="y" Width="width" Height="height" InheritColor="passColor">
	<Script>if fillColor then</Script>
	<DrawNode>
		<Polygon FillColor="fillColor">
			<Vec2 X="0" Y="0"/>
			<Vec2 X="width" Y="0"/>
			<Vec2 X="width" Y="height"/>
			<Vec2 X="0" Y="height"/>
		</Polygon>
	</DrawNode>
	<Script>end</Script>
	<Script>if borderColor then</Script>
	<Line Color="borderColor">
		<Vec2 X="0" Y="0"/>
		<Vec2 X="width" Y="0"/>
		<Vec2 X="width" Y="height"/>
		<Vec2 X="0" Y="height"/>
		<Vec2 X="0" Y="0"/>
	</Line>
	<Script>end</Script>
</Node>
<MenuItem Name="menuItem" X="x" Y="y" Width="w" Height="h" Color="0x00ffff">
	<Action>
		<Sequence Name="scale">
			<Spawn>
				<Opacity Alpha="1"/>
				<Scale X="0.3" Y="0.3"/>
			</Spawn>
			<Scale Time="0.3" X="1" Y="1" Ease="OutBack"/>
		</Sequence>
		<Opacity Name="fade" Time="0.3" Alpha="0.4" Ease="InExpo"/>
	</Action>
	<Node Name="face" X="w*0.5" Y="h*0.5" Width="w" Height="h" Opacity="0.4">
		<Node PassColor="False">
			<DrawNode>
				<Polygon FillColor="0x88000000">
					<Vec2 X="0" Y="0"/>
					<Vec2 X="w" Y="0"/>
					<Vec2 X="w" Y="h"/>
					<Vec2 X="0" Y="h"/>
				</Polygon>
			</DrawNode>
		</Node>
		<Line>
			<Vec2 X="0" Y="0"/>
			<Vec2 X="w" Y="0"/>
			<Vec2 X="w" Y="h"/>
			<Vec2 X="0" Y="h"/>
			<Vec2 X="0" Y="0"/>
		</Line>
		<LabelTTF X="w*0.5" Y="h*0.5" Text="text" FontName="Arial" FontSize="fontSize"/>
	</Node>
	<Script>
		menuItem:slots("TapBegan",function()
			face:perform(scale)
		end)
		menuItem:slots("TapEnded",function()
			if not fade.done then face:stopAction(fade) end
			face:runAction(fade)
		end)
	</Script>
</MenuItem>
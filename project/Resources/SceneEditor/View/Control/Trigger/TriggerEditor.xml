<!-- params: X, Y, Width, Height -->
<LayerColor X="{ @X }" Y="{ @Y }"
	TouchPriority="{ editor.levelTriggerEditor }"
	Color="0x0" Opacity="0"
	SwallowTouches="True" TouchEnabled="True" Visible="False">
	<Import Module="Control.Basic.ScrollArea"/>
	<Import Module="Control.Basic.Button"/>
	<Import Module="Control.Trigger.TriggerItem"/>
	<Import Module="View.Shape.LineRect"/>
	<Import Module="View.Shape.SolidRect"/>
	<Import Module="View.Control.Basic.CircleButton"/>

	<Node Name="panel" X="{ $X }" Y="{ $Y }" Width="{ @W-80 }" Height="{ @H-80 }" Ref="True">
		<SolidRect Width="{ $W }" Height="{ $H }" Color="0xe5100000"/>

		<!-- trigger list -->
		<ScrollArea Name="listScrollArea" X="105" Y="{ $T-($H-60)/2 }" Width="210" Height="{ $H-60 }" PaddingX="0" PaddingY="100" TouchPriority="{ editor.levelTriggerEditor-2 }" AlignItems="10" Ref="True">
			<Item Name="view">
				<Menu Name="listMenu" X="{ $X }" Y="{ $Y }" Width="{ $W }" Height="{ $H }" AlignItems="10" TouchPriority="{ editor.levelTriggerEditor-1 }" Enabled="False" Ref="True">
					<TriggerItem Name="localBtn" Text="Local" Width="{ ($W-30)/2 }" Height="40" Ref="True"/>
					<TriggerItem Name="globalBtn" Text="Global" Width="{ ($W-30)/2 }" Height="40" Ref="True"/>
					<TriggerItem Text="SceneInitialized" Width="190" Height="30"/>
					<TriggerItem Text="Every5Minutes" Width="190" Height="30"/>
					<TriggerItem Text="GameStarted" Width="190" Height="30"/>
					<TriggerItem Text="PlayerCastSpell1" Width="190" Height="30"/>
					<TriggerItem Text="PlayerCastSpell2" Width="190" Height="30"/>
					<TriggerItem Text="PlayerCastSpell3" Width="190" Height="30"/>
					<TriggerItem Text="PlayerCastSpell4" Width="190" Height="30"/>
					<TriggerItem Text="PlayerCastSpell5" Width="190" Height="30"/>
					<TriggerItem Text="PlayerCastSpell6" Width="190" Height="30"/>
				</Menu>
			</Item>
		</ScrollArea>

		<!-- trigger edit menu -->
		<Menu Name="editMenu" X="{ $X }" Y="{ $B+30 }" Width="{ $W }" Height="60" AlignItems="10" TouchPriority="{ editor.levelTriggerEditor-1 }" Enabled="False" Ref="True">
			<Button Name="newBtn" Text="New" Width="40" Height="40" FontSize="16" Ref="True"/>
			<Button Name="addBtn" Text="Add" Width="40" Height="40" FontSize="16" Ref="True"/>
			<Button Name="delBtn" Text="Del" Width="40" Height="40" FontSize="16" Ref="True"/>
			<Button Name="copyBtn" Text="Copy" Width="40" Height="40" FontSize="13" Ref="True"/>
		</Menu>

		<!-- trigger content edit area-->
		<ScrollArea Name="triggerScrollArea" X="{ $W/2+105 }" Y="{ $Y }" Width="{ $W-210 }" Height="{ $H }" PaddingX="0" PaddingY="100" TouchPriority="{ editor.levelItemPanel-2 }" Ref="True">
			<Item Name="view">
				<Menu Name="triggerMenu" X="{ $X }" Y="{ $Y }" Width="{ $W }" Height="{ $H }" AlignItems="10" TouchPriority="{ editor.levelTriggerEditor-1 }" Enabled="False" Ref="True">
					<LabelTTF Name="contentLabel" FontName="Arial" FontSize="20" Text="Count numbers from [Number] to [Number] by [Number] and do [Action]." HorizontalAlign="Left" VerticalAlign="Top" Ref="True"/>
				</Menu>
			</Item>
		</ScrollArea>

		<LineRect X="-1" Y="-1" Width="{ $W+2 }" Height="{ $H+2 }" Color="0xffffafaf"/>
		<Line Color="0xffafaf" X="{ $X }" Y="{ $Y }" Width="{ $W }" Height="{ $H }">
			<Vec2 X="210" Y="{ $B }"/>
			<Vec2 X="210" Y="{ $T }"/>
		</Line>
	</Node>

	<Menu Name="opMenu" X="{ @X+(@W-80)/2-35 }" Y="{ @Y+(@H-80)/2 }" Width="130" Height="60" TouchPriority="{ editor.levelTriggerEditor-3 }" Enabled="False" Ref="True">
		<CircleButton Name="closeBtn" X="{ $R-30 }" Y="{ $Y }" Radius="30" Text="Cancel" FontSize="16" Ref="True">
			<DrawNode>
				<Dot X="30" Y="30" Radius="30" Color="0x22ffffff"/>
			</DrawNode>
		</CircleButton>
	</Menu>
</LayerColor>

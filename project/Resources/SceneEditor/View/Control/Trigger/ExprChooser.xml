<!-- params: X, Y, Width, Height -->
<Layer X="{ @X }" Y="{ @Y }"
	TouchPriority="{ editor.levelExprChooser }"
	SwallowTouches="True" TouchEnabled="True" Visible="False">
	<Import Module="Control.Basic.ScrollArea"/>
	<Import Module="View.Shape.LineRect"/>
	<Import Module="View.Shape.SolidRect"/>
	<Import Module="View.Control.Basic.CircleButton"/>
	<Import Module="Control.Trigger.TriggerItem"/>

	<Node Name="panel" X="{ @X }" Y="{ @Y }" Width="600" Height="{ @H*0.6 }" Ref="True">
		<SolidRect Width="{ $W }" Height="{ $H }" Color="0xe5100000"/>

		<ScrollArea Name="catScrollArea" X="{ $L+50 }" Y="{ $Y }" Width="100" Height="{ $H }" PaddingX="0" PaddingY="100" TouchPriority="{ editor.levelExprChooser-2 }" Ref="True">
			<Item Name="view">
				<Menu Name="catMenu" X="{ $X }" Y="{ $Y }" Width="{ $W }" Height="{ $H }" AlignItems="10" TouchPriority="{ editor.levelExprChooser-1 }" Ref="True"/>
			</Item>
		</ScrollArea>

		<ScrollArea Name="apiScrollArea" X="{ $L+175 }" Y="{ $Y }" Width="150" Height="{ $H }" PaddingX="0" PaddingY="100" TouchPriority="{ editor.levelExprChooser-2 }" Ref="True">
			<Item Name="view">
				<Menu Name="apiMenu" X="{ $X }" Y="{ $Y }" Width="{ $W }" Height="{ $H }" AlignItems="10" TouchPriority="{ editor.levelExprChooser-1 }" Ref="True"/>
			</Item>
		</ScrollArea>

		<ScrollArea Name="bodyScrollArea" X="{ $R-175 }" Y="{ $Y }" Width="{ 350 }" Height="{ $H }" PaddingX="0" PaddingY="100" TouchPriority="{ editor.levelExprChooser-2 }" Ref="True">
			<Item Name="view">
				<Menu Name="bodyMenu" X="{ $X }" Y="{ $Y }" Width="{ $W }" Height="{ $H }" AlignItems="10" TouchPriority="{ editor.levelExprChooser-1 }" Ref="True">
					<LabelBMFont Name="bodyLabel" AnchorX="0" AnchorY="1" File="Font/Arial20.fnt" TextWidth="{ $W-20 }" HorizontalAlign="Left" Ref="True"/>
				</Menu>
			</Item>
		</ScrollArea>

		<LineRect X="-1" Y="-1" Width="{ $W+2 }" Height="{ $H+2 }" Color="0xffffafaf"/>
		<Line Color="0xffafaf" X="{ $X }" Y="{ $Y }" Width="{ $W }" Height="{ $H }">
			<Vec2 X="100" Y="{ $B }"/>
			<Vec2 X="100" Y="{ $T }"/>
		</Line>
		<Line Color="0xffafaf" X="{ $X }" Y="{ $Y }" Width="{ $W }" Height="{ $H }">
			<Vec2 X="250" Y="{ $B }"/>
			<Vec2 X="250" Y="{ $T }"/>
		</Line>
	</Node>

	<Menu Name="opMenu" X="{ @X+600/2-35 }" Y="{ @Y+(@H*0.6)/2 }" Width="130" Height="60" TouchPriority="{ editor.levelExprChooser-3 }" Ref="True">
		<CircleButton Name="okBtn" X="{ $R-30 }" Y="{ $Y }" Radius="30" Text="OK" FontSize="16" Ref="True">
			<DrawNode>
				<Dot X="30" Y="30" Radius="30" Color="0x22ffffff"/>
			</DrawNode>
		</CircleButton>
	</Menu>

</Layer>

<MenuItem X="{ x }" Y="{ y }" Width="430" Height="30" Text="{ text }" Color="0x00ffff" Opacity="0.4">
	<Import Module="View.Shape.LineRect"/>
	
	<LineRect Width="430" Height="30" Color="0xffffffff"/>
	<LabelTTF Name="label" X="{ $X }" Y="{ $Y }" FontName="Arial" FontSize="16" Text="{ text }"/>
	<Script>
		label.texture.antiAlias = false
	</Script>
</MenuItem>
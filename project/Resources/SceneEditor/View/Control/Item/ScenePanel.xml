<!-- params: X, Y, Width, Height -->
<PopupPanel X="{ x }" Y="{ y }" Width="{ width }" Height="{ height }">
	<Import Module="Control.Basic.PopupPanel"/>
	<Import Module="Control.Basic.CircleButton"/>

	<Item Name="opMenu">
		<CircleButton Name="quitBtn" X="{ $L+30 }" Y="{ $Y }" Radius="30" Text="Quit" FontSize="16" Ref="True">
			<DrawNode>
				<Dot X="30" Y="30" Radius="30" Color="0x22ffffff"/>
			</DrawNode>
		</CircleButton>
	</Item>
</PopupPanel>

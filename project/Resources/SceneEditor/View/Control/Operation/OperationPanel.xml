<!-- params: X, Y, Width, Height -->
<ScrollArea X="{ x }" Y="{ y }" Width="{ width }" Height="{ height }" PaddingX="0" PaddingY="100" TouchPriority="{ editor.levelOperationPanel-1 }">
	<Import Module="Control.Basic.ScrollArea"/>
	<Import Module="View.Shape.SolidRect"/>
	<Import Module="View.Shape.LineRect"/>

	<Item Name="view">
		<SolidRect Width="{ $W }" Height="{ $H }" Color="0xee100000"/>
		<LineRect X="-1" Y="-1" Width="{ $W+2 }" Height="{ $H+2 }" Color="0x88ffafaf"/>
		<Menu Name="menu" X="{ $X }" Y="{ $Y }" Width="{ $W }" Height="{ $H }" TouchPriority="{ editor.levelOperationPanel }" Ref="True"/>
	</Item>

</ScrollArea>

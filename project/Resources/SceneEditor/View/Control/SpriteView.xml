<!-- params: X=0, Y=0, Width, Height, File -->
<MenuItem Name="item" X="{ x or 0 }" Y="{ y or 0 }" Width="{ width }" Height="{ height }">
	<Import Module="View.Shape.LineRect"/>
	<Import Module="View.Shape.SolidRect"/>

	<Node Name="face" X="{ $X }" Y="{ $Y }" Width="{ width }" Height="{ height }" Opacity="0.5" Ref="True">
		<LineRect X="-1" Y="-1" Width="{ width+2 }" Height="{ height+2 }" Color="0xff00ffff"/>
		<Sprite Name="sprite" X="{ $X }" Y="{ $Y }" Ref="True"/>
	</Node>

	<Action>
		<Scale Name="scale" Time="0.3" X="1" Y="1" Ease="OutBack"/>
		<Opacity Name="fade" Time="0.3" Alpha="0.5" Ease="InExpo"/>
	</Action>

	<Slot Name="TapBegan">
		face.opacity = 1
		face.scaleX = 0.3
		face.scaleY = 0.3
		face:perform(scale)
	</Slot>
	<Slot Name="TapEnded">
		if not item.checked then
			if not fade.done then face:stopAction(fade) end
			face:runAction(fade)
		end
	</Slot>
</MenuItem>

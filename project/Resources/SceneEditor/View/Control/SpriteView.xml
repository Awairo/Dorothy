<!-- params: X=0, Y=0, Width, Height, File -->
<MenuItem Name="item" X="{ x or 0 }" Y="{ y or 0 }" Width="{ width }" Height="{ height }">
	<Import Module="View.Shape.LineRect"/>
	<Import Module="View.Shape.SolidRect"/>

	<Action>
		<Sequence Name="scale">
			<Spawn>
				<Opacity Alpha="1"/>
				<Scale X="0.3" Y="0.3"/>
			</Spawn>
			<Scale Time="0.3" X="1" Y="1" Ease="OutBack"/>
		</Sequence>
		<Opacity Name="fade" Time="0.3" Alpha="0.4" Ease="InExpo"/>
	</Action>

	<Node Name="face" X="{ $X }" Y="{ $Y }" Width="{ width }" Height="{ height }" Opacity="0.4" Ref="True">
		<LineRect Width="{ width }" Height="{ height }" Color="0xff00ffff"/>
		<Sprite Name="sprite" X="{ $X }" Y="{ $Y }" Ref="True"/>
	</Node>

	<Slot Name="TapBegan">
		face:perform(scale)
	</Slot>
	<Slot Name="TapEnded">
		if not item.checked then
			if not fade.done then face:stopAction(fade) end
			face:runAction(fade)
		end
	</Slot>
</MenuItem>

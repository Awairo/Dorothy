<Layer Name="panel" X="{ x or 0 }" Y="{ y or 0 }" Width="{ width }" Height="{ height }">
	<Import Module="View.Shape.SolidRect"/>

	<ClipNode Name="view" Ref="True">
		<Stencil>
			<SolidRect Name="stencil" X="-1" Y="-1" Width="{ width+2 }" Height="{ height+2 }" Ref="True"/>
		</Stencil>
	</ClipNode>
</Layer>

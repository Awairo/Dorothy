<!-- params: X, Y, Width, Height -->
<PopupPanel Name="panel" X="{ @X }" Y="{ @Y }" Width="280" Height="{ @H*0.6 }">
	<Import Module="Control.Basic.PopupPanel"/>

	<Item Name="menu">
		<Node Width="260" Height="30">
			<LabelTTF Name="labelName" Text="Group" X="{ $X }" Y="{ $Y }" FontName="Arial" FontSize="24" Color="0x00ffff" AntiAlias="False" Ref="True"/>
		</Node>
		<Node Width="260" Height="30">
			<LabelTTF Text="Should Contact With" X="{ $X }" Y="{ $Y }" FontName="Arial" FontSize="24" Color="0x00ffff" AntiAlias="False"/>
		</Node>
	</Item>
</PopupPanel>

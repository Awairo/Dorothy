<!-- params: X, Y, Width, Height -->
<MenuItem Name="menuItem" X="{ x or 0 }" Y="{ y or 0 }" Width="{ width }" Height="{ height }" Color="0x00ffff">
	<!-- Animations -->
	<Action>
		<Sequence Name="scale" Ref="True">
			<Spawn>
				<Opacity Alpha="1"/>
				<Scale X="0.3" Y="0.3"/>
			</Spawn>
			<Scale Time="0.3" X="1" Y="1" Ease="OutBack"/>
		</Sequence>

		<Opacity Name="fade" Time="0.3" Alpha="0.4" Ease="InExpo" Ref="True"/>
	</Action>

	<!-- Face Node -->
	<Node Name="face" X="{ $X }" Y="{ $Y }" Width="{ width }" Height="{ height }" Opacity="0.4" Ref="True"/>

	<!-- Tap Event -->
	<Slot Name="TapBegan">
		face:perform(scale)
	</Slot>
	<Slot Name="TapEnded">
		if not fade.done then face:stopAction(fade) end
		face:runAction(fade)
	</Slot>
</MenuItem>
